                     , base
                     , bytestring
                     , directory
                     , filepath
                     , heredocs
                     , http-types
                     , insert-ordered-containers
                     , lens
                     , mtl
                     , servant
                     , servant-foreign
                     , servant-swagger
                     , swagger2
                     , text
                     , time
                     , unordered-containers
                     , uuid
                     , uuid-types

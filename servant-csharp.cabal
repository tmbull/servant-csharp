  other-extensions:    OverloadedStrings
                     , ScopedTypeVariables
                     , MultiParamTypeClasses
                     , FlexibleContexts
                     , FlexibleInstances
                     , TupleSections
                     , TypeSynonymInstances
                     , QuasiQuotes
